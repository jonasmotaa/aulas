4.


#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    float x, n, i, total, f, g, h, j;
    float r, result;
printf("digite o valor de x e n: \n");
scanf("%f" "%f", &x, &n);
 for(i = 1; i <= n; i++){
        f = i + 1;
        j = pow(x,i);
        g = j + f;
        h = x + i;
        r = g / h;
        total += r;
        }

        result = 3 * total;
        printf("f(x,n) = %.2f", result);

    return 0;
}
