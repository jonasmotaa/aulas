2.

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int p, j , anos;
    anos = 0;
    p = 150;
    j = 140;

    while (j <= p){
        j = j + 3;
        p = p + 2;
        anos++;

    }
printf("Joao sera maior que Pedro em %d anos", anos);
    return 0;
    
}

