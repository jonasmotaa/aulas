int main(){
    int vetor[5];
    int i, x;
    for (i = 0; i < 5; i++){
        printf("digite o falor de %d \n", i);
            scanf("%d", &vetor[i]);
    }
     for (i = 0; i < 5; i++){
  printf("[%d] = %d\n", i, vetor[i]);

}




return 0;
}

